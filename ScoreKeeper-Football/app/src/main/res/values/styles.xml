<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/holo_green_light</item>
        <item name="android:navigationBarColor">@android:color/holo_green_dark</item>
    </style>

    <!-- Style for Home button-->
    <style name="home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">@string/team_a</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_s</item>
        <item name="android:background">@color/background</item>
    </style>


    <!-- Style for Away button-->
    <style name="away">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:text">@string/team_b</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_s</item>
        <item name="android:background">@color/background</item>
    </style>


    <!-- Style for Team A-->
    <style name="team_a_score">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/result</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_s2</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Style for Team B-->
    <style name="team_b_score">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/result</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_s2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for buttons-->
    <style name="buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for result button-->
    <style name="result_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/b</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for LinearLayout-->
    <style name="linear_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- Style for View (line)-->
    <style name="View">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
